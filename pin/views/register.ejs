<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-cover bg-center bg-[url('/images/IMG_20240414_105519_444.jpg')] flex items-center justify-center"
>
  <div class="w-[25vw] bg-white px-10 py-5 rounded-[30px]">
    <h1
      class="text-3xl leading-none tracking-tight text-center text-semibold text-zinc-700"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="block border-2 rounded-md mt-5 px-3 py-2 w-full"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block border-2 rounded-md mt-2 px-3 py-2 w-full"
        type="text"
        name="fullname"
        placeholder="Full Name"
      />
      <input
        class="block border-2 rounded-md mt-2 px-3 py-2 w-full"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="block border-2 rounded-md mt-2 px-3 py-2 w-full"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="block border-2 rounded-md mt-2 px-3 py-2 w-full"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="block border-2 mt-4 px-3 py-2 w-full bg-red-500 text-white rounded-full"
        type="submit"
        value="Create Your Account"
      />
      <p
        class="mt-7 w=3/4 mx-auto text-xs text-center text-semibold text-zinc-700"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
      <a
        class="inline-block text-sm mt-7 text-semibold text-zinc-700 w-full text-center"
        href="/"
        >Login Existing Account</a
      >
    </form>
  </div>
</div>
<% include ./partials/footer.ejs %>
